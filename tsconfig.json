{
  "compilerOptions": {
    "module": "commonjs",
    "jsx": "react",
    "outDir": "dist",
    "esModuleInterop": true,
    "lib": ["ES2021", "DOM"],
    "target": "es6",
    "allowJs": true,
    "declarationMap": true,
    "declaration": true,
    "sourceMap": true
  },
  "include": ["src"],
  "exclude": ["**/*.test.ts", "**/*.test.tsx", "**/*.spec.ts", "**/*.spec.tsx"],
  "ts-node": {
    "swc": true
  }
}
